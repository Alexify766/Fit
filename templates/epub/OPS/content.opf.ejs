<?xml version="1.0" encoding="UTF-8" ?>
<package version="2.0" unique-identifier="PrimaryID" xmlns="http://www.idpf.org/2007/opf">
    <metadata xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:opf="http://www.idpf.org/2007/opf" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dcterms="http://purl.org/dc/terms/">
        <dc:title><%= title %></dc:title>
        <dc:identifier id="PrimaryID" opf:scheme="URI"><%= url %></dc:identifier>
        <dc:identifier opf:scheme="URI"><%= url %></dc:identifier>

        <dc:language xsi:type="dcterms:RFC4646">de</dc:language>

        <dc:creator opf:role="aut"><%= user.name %></dc:creator>

        <dc:publisher>Wattpad</dc:publisher>
        <dc:description><%= description %></dc:description>
        <dc:coverage></dc:coverage>
        <dc:source>https://www.wattpad.com</dc:source>
        <dc:date opf:event="ops-publication"><%= lastPublishedPart.createDate %></dc:date>
        <dc:rights></dc:rights>
        <% tags.forEach(function(tag){ %>
            <dc:subject><%= tag %></dc:subject>
        <% }); %>

        <meta name="cover" content="book-cover"/>
    </metadata>

    <manifest>
        <!-- Content Documents -->
        <item id="cover" href="cover.xhtml" media-type="application/xhtml+xml"/>
        <item id="titlepage" href="title.xhtml" media-type="application/xhtml+xml"/>

        <% for(var i=0; i<parts.length; i++){ %>
            <item id="chapter<%= i %>" href="chapter<%= i %>.xhtml" media-type="application/xhtml+xml"/>
        <% } %>

        <!-- CSS Style Sheets -->
        <item id="titlepage-css" href="css/title.css" media-type="text/css"/>
        <item id="main-css" href="css/main.css" media-type="text/css"/>

        <!-- Images -->
        <item id="book-cover" href="images/cover.jpg" media-type="image/jpeg"/>

        <!-- NCX -->
        <item id="ncx" href="toc.ncx" media-type="application/x-dtbncx+xml"/>

    </manifest>
    <spine toc="ncx">
        <itemref idref="cover" linear="yes"/>
        <itemref idref="titlepage" linear="yes"/>

        <% for(var i=0; i<parts.length; i++){ %>
            <itemref idref="chapter<%= i %>" linear="yes"/>
        <% } %>
    </spine>
    <guide>
        <reference type="cover" title="Cover" href="cover.xhtml"/>
        <reference type="title-page" title="Title Page" href="title.xhtml"/>

        <% for(var i=0; i<parts.length; i++){ %>
            <reference type="text" title="Chapter<%= i %>" href="chapter<%= i %>.xhtml"/>
        <% } %>
    </guide>
</package>
