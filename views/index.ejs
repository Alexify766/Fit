<!DOCTYPE html>

<html lang="<%= langName %>">

    <head>
        <title>Wattpad downloader</title>
        <meta name="description" content="<%= lang.description %>" />
        <meta name="viewport" content="width=device-width, initial-scale=0.9">
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
        <link rel="stylesheet" href="style.css" />
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    </head>

    <body>

        <div id="titlebar">
            <img src="icon.png" onclick="window.location.href = '/'"/>
            <h1>Wattpad Downloader</h1>
            <span class="spacer"></span>
            <div id="nav">
                <a href="/"><%= lang.titlebar.home %></a>
                <a href="/help"><%= lang.titlebar.help %></a>
                <a href="/privacy"><%= lang.titlebar.privacy %></a>
                <a href="https://wattpad.com" target="_blank">Wattpad</a>
            </div>
            <a href="#" onclick="toggleMobileNav(event)" id="toggle-mobile-nav">Menu</a>
        </div>

        <%
            if(book && page === "book"){
                %> <%- include("book", { book, lang }) -%> <%
            }else if(error && page === "error"){
                %> <%- include("error", { error, lang }) -%> <%
            }else if(page === "help"){
                %> <%- include("help", { lang }) -%> <%
            }else if(page === "privacy"){
                %> <%- include("privacy", { lang }) -%> <%
            }else{
                %> <%- include("home", { lang }) -%> <%
            }
        %>

    </body>

</html>

<script>
function toggleMobileNav(event){
	event.preventDefault();
	document.querySelector("#nav").classList.toggle("active")
}
</script>